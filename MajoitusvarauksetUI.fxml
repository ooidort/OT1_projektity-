<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="700" prefHeight="400">

    <!-- Uusi varaus - VBox -->
    <VBox layoutX="27.0" layoutY="33.0" alignment="TOP_LEFT" spacing="5" prefWidth="250">
        <Label text="Uusi varaus" />
        <Label text="Mökki:" />
        <ListView fx:id="mokkiListaUusivaraus" prefHeight="100">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Mökki 1"/>
                    <String fx:value="Mökki 2"/>
                    <String fx:value="Mökki 3"/>
                </FXCollections>
            </items>
        </ListView>
        <Label text="Asiakas:" />
        <TextField fx:id="asiakasField" text="Asiakkaan nimi"/>
        <Label text="Alkupäivä:" />
        <TextField fx:id="alkupaivaField" text="Syötä päivämäärä"/>
        <Label text="Loppupäivä:" />
        <TextField fx:id="loppupaivaField" text="Syötä päivämäärä"/>
        <Label text="Lisätietoja:" />
        <TextField fx:id="lisatiedotField" text="Lisätietoja"/>
        <Button fx:id="tallennavarausBt" text="Tallenna varaus"/>
        <Button fx:id="peruutaBt" text="Peruuta"/>
    </VBox>

    <!-- Muokkaa ja poista varauksia - VBox -->
    <VBox layoutX="380.0" layoutY="33.0" alignment="TOP_LEFT" spacing="5" prefWidth="250">
        <Label text="Muokkaa ja poista varauksia" />
        <Label text="Mökki:" />
        <ListView fx:id="mokkiListaMuokkaa" prefHeight="100">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Mökki 1"/>
                    <String fx:value="Mökki 2"/>
                    <String fx:value="Mökki 3"/>
                </FXCollections>
            </items>
        </ListView>
        <Label text="Asiakas:" />
        <TextField fx:id="asiakasField1" text="Asiakkaan nimi"/>
        <Label text="Alkupäivä:" />
        <TextField fx:id="alkupaivaField1" text="Syötä päivämäärä"/>
        <Label text="Loppupäivä:" />
        <TextField fx:id="loppupaivaField1" text="Syötä päivämäärä"/>
        <Label text="Lisätietoja:" />
        <TextField fx:id="lisatiedotField1" text="Lisätietoja"/>
        <Button fx:id="tallennavarausBt1" text="Tallenna varaus"/>
        <Button fx:id="peruutaBt1" text="Peruuta"/>
        <Button fx:id="poistavarausBt1" text="Poista varaus"/>
    </VBox>

</AnchorPane>

